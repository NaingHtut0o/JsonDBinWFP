<Page x:Class="SmartHealthTest.Views.RegisterAttributePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHealthTest"
        mc:Ignorable="d"
        Title="属性登録" Height="Auto" Width="Auto" Background="LightYellow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="属性登録" FontSize="22" FontWeight="Bold" Margin="10" Foreground="DarkOrange"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="80,10,50,0" Height="30" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="都市OSID" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Width="75"/>
                <TextBox Grid.Column="1" Width="430" FontSize="16" VerticalContentAlignment="Center" x:Name="searchID" Margin="0 0 5 0"/>
                <Button Grid.Column="2" Width="60" Content="検索" FontSize="16" Margin="0 0 5 0" Click="Search"/>
                <Button Grid.Column="3" Width="60" Background="White" Foreground="DarkOrange" Content="クリア" FontSize="16"  Margin="0 0 5 0" Click="Clear"/>
            </Grid>

            <Grid Grid.Row="1" x:Name="_attributeNames"/>
        </Grid>

        <Grid x:Name="NoDataGrid" Grid.Row="2" Margin="80, 10, 50, 0"  Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="DarkOrange" x:Name="_headerGrid"/>
            <Grid Grid.Row="1" x:Name="_bodyGrid"/>
        </Grid>

        <Button Grid.Row="3" Content="登録" Width="100" Height="30" HorizontalAlignment="Right" Margin="0, 10, 50, 50" FontSize="16" Click="Update"/>
    </Grid>
</Page>