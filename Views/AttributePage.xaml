<Page x:Class="SmartHealthTest.Views.AttributePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHealthTest"
        mc:Ignorable="d"
        Title="属性マスタ" Height="Auto" Width="Auto">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Text="属性マスタ" FontSize="22" FontWeight="Bold" Margin="10" Foreground="{DynamicResource PrimaryBrush}" Height="30"/>

		<Grid Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<Grid Grid.Row="0" Margin="80,10,50,0" Height="35" VerticalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="0" Text="属性ID" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Width="75" Foreground="{DynamicResource PrimaryBrush}"/>
                <TextBox Grid.Column="1" Width="430" FontSize="16" VerticalContentAlignment="Center" x:Name="searchID" Margin="0 0 5 0" Foreground="{DynamicResource DataGridBrush}" Background="{DynamicResource AlternateBrush}"/>
				<Button Grid.Column="2" Width="60" Content="検索" FontSize="16" Margin="0 0 5 0" Click="Search"/>
				<Button Grid.Column="3" Width="60" Style="{DynamicResource ClearStyle}" Content="クリア" FontSize="16"  Margin="0 0 5 0" Click="Clear"/>
			</Grid>

			<Grid Grid.Row="1" Margin="80,10,50,0" Height="35" VerticalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="0" Text="属性名" FontWeight="Bold" FontSize="16" Width="75" Grid.ColumnSpan="2" Foreground="{DynamicResource PrimaryBrush}"/>
                <TextBox Grid.Column="2" Width="430" FontSize="16" VerticalContentAlignment="Center" x:Name="newName" Margin="0,0,5,0" Foreground="{DynamicResource DataGridBrush}" Background="{DynamicResource AlternateBrush}"/>
			</Grid>
		</Grid>

        <DataGrid Grid.Row="2" x:Name="dgAttributes" Margin="80, 10, 50, 0" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" CanUserDeleteRows="False" CanUserSortColumns="False"  RowHeaderWidth="0" ColumnHeaderHeight="50" RowHeight="40" FontSize="16" BorderThickness="0" VerticalGridLinesBrush="{DynamicResource PrimaryBrush}" HorizontalGridLinesBrush="{DynamicResource PrimaryBrush}" AlternatingRowBackground="{DynamicResource AlternateBrush}" RowBackground="{DynamicResource WindowBackground}">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                    <!-- Header Background Color -->
                    <Setter Property="Foreground" Value="White"/>
                    <!-- Header Text Color -->
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="Foreground" Value="{DynamicResource DataGridBrush}"/>
                    <!--<Style.Triggers>
                        <DataTrigger Binding="{Binding IsFocused, RelativeSource={RelativeSource Self}}" Value="True">
                            <Setter Property="Background" Value="Black"/>
                        </DataTrigger>
                    </Style.Triggers>-->
                </Style>
                <!--<Style TargetType="DataGridRow">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>-->
            </DataGrid.Resources>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="GotFocus" Handler="DataGrid_GotFocus"/>
                    <EventSetter Event="LostFocus" Handler="DataGrid_LostFocus"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header=" ID" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="1, 0, 0, 0" Padding="3">
                                <TextBlock Text="{Binding AttributeId}" VerticalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header=" 属性名" Width="6*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding AttributeName}" VerticalAlignment="Center" Padding="3"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header=" 活動" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="ConfirmDelete" Tag="{Binding}"  Width="20" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets" Style="{DynamicResource DeleteStyle}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid x:Name="NoDataGrid" Grid.Row="2" Margin="80, 10, 50, 0"  Visibility="Collapsed">
			<Grid.RowDefinitions>
				<RowDefinition Height="50"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Grid Grid.Row="0" Background="{DynamicResource PrimaryBrush}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2*"/>
					<ColumnDefinition Width="6*"/>
					<ColumnDefinition Width="2*"/>
				</Grid.ColumnDefinitions>
				<Border Grid.Column="0">
					<TextBlock Text=" ID" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold"/>
				</Border>
				<Border Grid.Column="1">
					<TextBlock Text=" 属性名" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold"/>
				</Border>
				<Border Grid.Column="2">
					<TextBlock Text=" 活動" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold"/>
				</Border>
			</Grid>
			<Grid Grid.Row="1">
				<TextBlock Background="{DynamicResource WindowBackground}" FontSize="50" FontWeight="Bold" Text="データ 無し" Foreground="{DynamicResource ClearBrush}" HorizontalAlignment="Center"/>
			</Grid>
		</Grid>

		<Button Grid.Row="3" Content="登録" Width="100" Height="50" HorizontalAlignment="Right" Margin="0, 10, 50, 50" FontSize="16" Click="Update"/>
	</Grid>
</Page>
